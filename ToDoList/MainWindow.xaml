<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="ToDoList" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="10">
            <DataGrid ItemsSource="{Binding ListDays}" ></DataGrid>
        </Grid>
        <Grid Grid.Column="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <DataGrid CanUserDeleteRows="False" 
                          CanUserReorderColumns="False" 
                          ItemsSource="{Binding ListTasks}"
                          SelectedItem="{Binding SelectedTask}">
                </DataGrid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Horizontal">
                        <Button Command="{Binding AddCommand}" Width="100" Content="Add more"></Button>
                        <Button Command="{Binding DeleteCommand}" Width="100" Content="Delete"></Button>
                    </StackPanel>
                </Grid>
            </Grid>

        </Grid>
    </Grid>
</Window>
